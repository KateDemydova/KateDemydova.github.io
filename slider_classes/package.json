{
  "name": "scss-compiler",
  "version": "1.0.0",
  "description": "SCSS to CSS compiler",
  "scripts": {
    "build": "sass assets/scss/_style.scss assets/css/style.css --no-source-map --style=compressed",
    "watch": "sass --watch assets/scss/_style.scss:assets/css/style.css --no-source-map --style=expanded"
  },
  "devDependencies": {
    "sass": "^1.75.0"
  }
}